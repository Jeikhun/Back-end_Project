@model List<Networks>
<div class="card-body">
    <table class="table">
        <thead>
            <tr class="text-nowrap">
                <th>Id</th>
                <th>Icon</th>
                <th>Link</th>
                <th>Created Time</th>
                <th>Updated Time</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Icon</td>
                    <td>@item.Link</td>
                    <td>@item.CreatedTime</td>
                    <td>@item.UpdatedTime</td>

                    <td><a asp-controller="network" asp-action="update" asp-route-id="@item.Id" class="fa-solid fa-pen-to-square"><i></i></a></td>
                    <td><a asp-controller="network" asp-action="delete" asp-route-id="@item.Id" class="fa-solid fa-trash-can"><i></i></a></td>

                </tr>
            }

        </tbody>
    </table>
    <a asp-area="admin" asp-controller="network" asp-action="create"><button type="button" class="btn btn-primary btn-lg btn-block"> Create Network </button></a>

</div>