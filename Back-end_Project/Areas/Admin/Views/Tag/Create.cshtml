@model Tag
<div class="card-body">
    <form method="post" >
        <div class="mb-3 col-md-6">
            <label asp-for="Name" class="form-label">Tag Name</label>
            <input class="form-control"
                   type="text"
                   asp-for="Name" />
            <span class="text text-danger" asp-validation-for="Name"></span>

        </div>
        @Html.AntiForgeryToken()
        <button type="submit" style="width: 180px;" class="btn btn-success btn-rounded">Create</button>
    </form>
</div>