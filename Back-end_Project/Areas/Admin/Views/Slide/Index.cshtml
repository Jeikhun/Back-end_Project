@model List<Slide>
<div class="card-body">
    <table class="table">
        <thead>
            <tr class="text-nowrap">
                <th>Id</th>
                <th>Image</th>
                <th>Created Time</th>
                <th>Updated Time</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td><img src="~/assets/img/@item.Image" width="100px" style="object-fit: cover;" height="100px"></img></td>
                    <td>@item.CreatedTime</td>
                    <td>@item.UpdatedTime</td>

                    <td><a asp-controller="slide" asp-action="update" asp-route-id="@item.Id" class="fa-solid fa-pen-to-square"><i></i></a></td>
                    <td><a asp-controller="slide" asp-action="delete" asp-route-id="@item.Id" class="fa-solid fa-trash-can"><i></i></a></td>

                </tr>
            }

        </tbody>
    </table>
    <a asp-area="admin" asp-controller="slide" asp-action="create"><button type="button" class="btn btn-primary btn-lg btn-block"> Create Language </button></a>
    </div>