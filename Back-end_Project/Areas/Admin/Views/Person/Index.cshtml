@model List<Person>
<div class="card-body">
    <table class="table">
        <thead>
            <tr class="text-nowrap">
                <th>Id</th>
                <th>Image</th>
                <th>Title</th>
                <th>Text</th>
                <th>Name</th>
                <th>Position</th>
                <th>Created Time</th>
                <th>Updated Time</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td><img src="~/assets/img/@item.Image" width="100px" style="object-fit: cover;" height="100px"></img></td>
                    <td>@item.Title</td>
                    <td>@item.Text</td>
                    <td>@item.Name</td>
                    <td>@item.Position</td>
                    <td>@item.CreatedTime</td>
                    <td>@item.UpdatedTime</td>

                    <td><a asp-controller="person" asp-action="update" asp-route-id="@item.Id" class="fa-solid fa-pen-to-square"><i></i></a></td>
                    <td><a asp-controller="person" asp-action="delete" asp-route-id="@item.Id" class="fa-solid fa-trash-can"><i></i></a></td>

                </tr>
            }

        </tbody>
    </table>
        <a asp-area="admin" asp-controller="person" asp-action="create"><button type="button" class="btn btn-primary btn-lg btn-block"> Create Person </button></a>

</div>